<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Country</title>
    <style>
        .body {
            
            display: flex;
            flex-direction: column;
            align-items: center;
            border-style: double;
            height: 560px;
            background-color: lightgrey;
        }

        .head {
            margin-top: 20px;
            width: 300px;
            text-align: center;
            border: 2px solid black;
        }

        .res {
            background-color: blanchedalmond;
            width: 700px;
            height: auto;
            margin: 30px;
            padding: 20px;
            font-family: Georgia;
            font-size: 14px;
            border-radius: 20px;

        }

        .submit-button {
            background-color: #ddd;
            border: none;
            color: black;
            padding: 16px 28px;
            text-align: center;
            font-size: 12px;
            transition: 0.3s;
            margin: 10px;
        }

        .submit-button:hover {
            background-color: green;
            color: white;
            border-radius: 20px;
        }
        .box {
            margin: 10px;
        }

        .input {
            width: 200px;
            margin-top: 20px;
            display: flex;
            justify-content: space-evenly;
            flex-direction: column;
        }
    </style>
</head>

<body class="body">
    <div class="head">
        <h2>STATE LIST</h2>
    </div>
    <div class=" input">
        <label for="state">Choose State :</label>
        <select class="box" name="state" id="state">
            <% for (var i=0;i< state.length;i++) { %>
                <option>
                    <%=state[i].state1 %>
                </option>
                <option>
                    <%=state[i].state2 %>
                </option>
                <option>
                    <%=state[i].state3 %>
                </option>
                <option>
                    <%=state[i].state4 %>
                </option>
                <option>
                    <%=state[i].state5 %>
                </option>
                <% } %>
        </select>
        <button class="submit-button" onclick="getStateInfo()">Submit</button>
    </div>

    <div class="res" id="result"></div>
    <script>
        async function getStateInfo() {
            var info = '';
            var stateName = document.querySelector('#state').value;
            const response = await fetch('http://localhost:3000/api/country/stateInfo?state=' + stateName);
            const result = await response.text();
            console.log(result)
            document.getElementById('result').innerHTML = result;
        }
    </script>
</body>

</html>